@model Projekt_zaliczeniowy_Bruno_Herdecki_13926.Models.LoginModel;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body style="align-content:center">
    <form asp-controller="Access" asp-action="Login" method="post" style="text-align: center;">
        <h1>Login</h1>
        <input type="email" placeholder="Email" asp-for="Email" />
        <input type="password" placeholder="Password" asp-for="Password" />

        <label>
            <input type="checkbox" asp-for="KeepLoggedIn" />
            Keep me logged In.
        </label>
        <button type="submit">Login</button>

        @if (ViewData["ValidateMessage"] != null)
        {
            <br />
            <br />
            <label>@ViewData["ValidateMessage"]</label>
        }
        <div>
            <a asp-action="Register">Register</a>
        </div>

    </form>
</body>
</html>
